<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <GasparTaskAssembly>..\tools\net5.0\Gaspar.dll</GasparTaskAssembly>
  </PropertyGroup>

  <UsingTask AssemblyFile="$(GasparTaskAssembly)" TaskName="WCKDRZR.Gaspar.MSBuild.OnBuild" />

  <Target Name="Gaspar" BeforeTargets="BeforeCompile" Condition="'$(RunGaspar)' != 'False'">
    <WCKDRZR.Gaspar.MSBuild.OnBuild ConfigFile="$(MSBuildProjectDirectory)\gaspar.config.json" />
  </Target>
</Project>